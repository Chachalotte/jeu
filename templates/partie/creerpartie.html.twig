{% extends 'base.html.twig' %}

{% block title %} Création de partie Trash Project

{% endblock %}

{% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style_inscription.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.min.css') }}">

{% endblock %}

{% block body %}
<div class="formulaire">

    <h1 style="font-size: 32px;">Créer une nouvelle partie</h1>
    <form action="" method="POST">

          {% for i in 1..6 %}
            <section class="col-sm-12" style="display: flex; flex-direction: row;">
                <div style="width: 25vw;">
                        <label for="joueur{{ i }}">Joueur {{ i }}</label>
                        <select name="joueur{{ i }}" id="joueur{{ i }}" style="width: 25%;">
                            <option value=""></option>
                            {% for joueur in joueurs %}
                                <option value="{{ joueur.id }}">{{ joueur.username }}</option>
                            {% endfor %}
                        </select>
                </div>
                    {% if i < 7 %}

                <div class="col-sm-6">
                    <label for="pion{{ i }}">Pion {{ i }}</label>
                    <select name="pion{{ i }}" id="pion{{ i }}">
                        <option value=""></option>
                        {% for i in 1..5 %} {# Pourrait provenir d'une table #}
                            <option value="pion{{ i }}">pion {{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
                    {% endif %}
            </section>
        {% endfor %}


    <button class="connexion" type="submit">
        Créer la partie
    </button>
    
</form>
</div>

    <div class="formulaire">

    <h1 style="font-size: 32px;">Rejoindre une partie</h1>
                    <div id="app_partie" style="display: flex; flex-direction: column; width: 50%; margin-right: auto; margin-left: auto;">
                    <label for="code_partie">Entrer le code de la partie, puis validez</label>
                    <input v-model="code">
                    <a v-bind:href="'/jeu/jouer/affiche-partie/' + code" class="connexion" style="text-decoration: none; color:black; text-align:center;">Rejoindre</a>
                    </div>
    </div>

{% endblock %}
{% block javascripts %}
<script>
    var app = new Vue({

        el: '#app_partie',
        data: {
            code: ''
        }
    })
</script>
{% endblock %}


